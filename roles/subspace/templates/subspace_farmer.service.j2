
[Unit]
Description="subspace farmer"
After=network-online.target

[Service]
User={{ subspace_owner}}
Group={{ subspace_group }}
WorkingDirectory={{ subspace_farmer_install_path }}/
ExecStart={{ subspace_farmer_binary_name }} --base-path {{ subspace_farmer_install_path }}/ farm --disable-private-ips --reward-address {{ subspace_farmer_wallet_adress }} --plot-size 10G
StandardOutput=append:{{subspace_farmer_log_folder}}/{{ subspace_farmer_log_file }}
StandardError=append:{{subspace_farmer_log_folder}}/{{ subspace_farmer_log_file }}


Restart=on-failure
RestartSec=5s

[Install]
WantedBy=multi-user.target