
[Unit]
Description="subspace farmer"
After=network-online.target

[Service]
User={{ subspace_owner}}
Group={{ subspace_group }}
WorkingDirectory={{ subspace_farmer_install_path }}/
ExecStart={{ subspace_farmer_binary_name }} --base-path {{ subspace_node_install_path }}/ farm --disable-private-ips --reward-address {{ subspace_wallet_adress }} --plot-size 10G

Restart=on-failure
RestartSec=5s

[Install]
WantedBy=multi-user.target